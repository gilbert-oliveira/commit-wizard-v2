{
  "name": "commit-wizard",
  "version": "1.0.0",
  "description": "CLI inteligente para gerar mensagens de commit usando OpenAI",
  "main": "dist/commit-wizard.js",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "commit-wizard": "./dist/commit-wizard.js"
  },
  "scripts": {
    "dev": "bun run bin/commit-wizard.ts",
    "build": "bun build bin/commit-wizard.ts --outdir=dist --target=bun --minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run build && bun test",
    "start": "bun run bin/commit-wizard.ts",
    "ci:test": "bun test --reporter=verbose",
    "ci:build": "bun run build",
    "ci:lint": "bun fmt --check && bun run tsc --noEmit",
    "ci:security": "bun audit",
    "ci:integration": "bun test tests/integration.test.ts tests/smart-split.test.ts",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "format": "bun fmt",
    "type-check": "bun run tsc --noEmit"
  },
  "keywords": ["git", "commit", "ai", "openai", "cli", "automation", "conventional-commits"],
  "author": "Gilbert <gilbert@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/commit-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/user/commit-wizard/issues"
  },
  "homepage": "https://github.com/user/commit-wizard#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "dist/",
    "README.md",
    "LICENSE",
    ".commit-wizardrc"
  ],
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "clipboardy": "^4.0.0",
    "simple-git": "^3.25.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "chalk": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  }
}
